<h1>@ViewData["Title"]</h1>

            <form id="account" method="post">
                            <div class="detail-box">
                          <h1>
                              Use a local account to log in.
                           </h1>
                  </div>
            
    
                @* <h2>Use a local account to log in.</h2>
                <hr />  *@
                <section class="vh-100">
                   <div class="container-fluid h-custom">
                       <div class="row d-flex justify-content-center align-items-center h-100">
                            <div class="col-md-9 col-lg-6 col-xl-5">
                                <img src="~/images/login&register/computer login-rafiki.png"
                                     class="img-fluid" alt="Sample image">
                            </div>


                            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                 <div class="form-outline mb-4">
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                        <label asp-for="Input.Email" class="form-label">Email</label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                 </div>
                                 <div class="form-outline mb-3">
                                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                        <label asp-for="Input.Password" class="form-label">Password</label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                 </div>

                                <div class="d-flex justify-content-between align-items-center">
                                    <!-- Checkbox -->
                                    <div class="form-check mb-0">
                                            <label asp-for="Input.RememberMe" class="form-check-label">
                                            <input class="form-check-input me-2" asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                    </div>

                                    <div class="text-center text-lg-start mt-4 pt-2">
                                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg "
                                                    style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                                Log in
                                            </button>
                                        <p class="small fw-bold mt-2 pt-1 mb-0">
                                    Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a>
                                        </p>
                                    </div>
                               </div>

                            </div>
                        </div>
                    </div>
                </section>
</form>


