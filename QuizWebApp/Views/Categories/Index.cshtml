@model IEnumerable<QuizWebApp.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<section class="category_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                CATEGORIES
            </h2>
        </div>
        <h4 class="container text-center">
            Choose a category:
        </h4>
        <div class="category_container">
            @foreach (var item in Model) {
            <div class="box">
                <div class="img-box">
                        <a asp-area="" asp-controller="Questions" asp-action="Index"
                           style="color:white">
                            <img class= "img-box" src="~/Images/hero_area/@item.CategoryImage">
                        </a>
                </div>
                <div class="detail-box">
                    <h5>
                            <a asp-area="" asp-controller="Questions" asp-action="Index" 
                            style="color:white">
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </a>
                    </h5>    
                </div>
            </div>
            }
        </div>
    </div>
</section>

